<% include partials/header %>

<body>
    <h5 class="session-id">Queue ID: <%=code%></h5>
    <h1 class="header">Queue Sync</h1>
    <form class="form">
        <input class="song-input" type="text" name="track-title" placeholder="Track Title"><br>
        <button class="join-btn">Add</button>
    </form>
    <table class="song-list">
        <tr class="table-header">
            <th></th>
            <th>Track</th>
            <th>Artist</th>
        </tr>
        <tbody>
            <% int trackNum = 0; %>
            <% tracks.forEach(function(track){ i++%>
            <tr>
                <th><%=trackNum%></th>
                <th><%= track.title %>
                <th><%= track.artist %></th>
            </tr>
            <% }); %>
        </tbody>
    </table>
</body>

</html>